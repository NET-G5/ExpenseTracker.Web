@using ExpenseTracker.Web.ViewModels.Transfer
@model TransferViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<h4>Are you sure you want to delete this?</h4>
<br>
<div>       
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary mx-2" asp-action="Index" style="width:74.04px">No</button>
            <button type="submit" class="btn btn-danger mx-2" style="border-radius : 5px;">Yes</button>
        </div>
    </form>
</div>
