@model ExpenseTracker.Web.Requests.Auth.LoginUserRequest

@{
    ViewData["PageTitle"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="widget p-5" style="background-color:#212b36">
            <h2 class="text-center mb-5">Login</h2>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-textbox id="user-name" placeholder="UserName" ejs-for="UserName" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="UserName" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="password" placeholder="Password" ejs-for="Password" floatLabelType="Always" type="password"></ejs-textbox>
                    <span asp-validation-for="Password" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                </div>
                <div class="d-grid gap-2">
                    <ejs-button id="submit" type="submit" content="Login" cssClass="e-success"></ejs-button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <a asp-action="ForgotPassword" class="text-info">Forgot Password?</a>
            </div>
            <div class="mt-3 text-center">
                <span>Don't have an account? </span>
                <a asp-action="Register" class="text-info">Register</a>
            </div>
        </div>
    </div>
</div>