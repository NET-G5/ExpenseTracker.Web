@{
    ViewData["Title"] = "Reset Password Sent";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="confirmation-pending-container">
    <h2>Reset Password Sent</h2>
    <p>Please check your email inbox and follow instructions to reset your password.</p>
    <p>If you do not receive the email within a few minutes, please check your spam folder or try again.</p>
    <a asp-action="Login" class="btn btn-confirm">Login</a>
</div>
