@using ExpenseTracker.Web.ViewModels.Category
@model CategoryViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<h4>Are you sure you want to delete this <span style="color:#E74C3C">@Model.Name</span> category?</h4>
<br>
<div>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary mx-2" asp-action="Index" style="width:74.04px">No</button>
            <button type="submit" class="btn btn-danger mx-2" style="border-radius : 5px;">Yes</button>
        </div>
    </form>
</div>