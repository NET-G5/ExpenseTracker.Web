@model ExpenseTracker.Web.Requests.Wallet.CreateWalletRequest;

@{
    Layout = "~/Views/Shared/_ModalForLayout.cshtml";
}

<form id="createWalletForm" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <ejs-textbox name="Name" id="title" placeholder="Title" class="form-control" floatLabelType="Always" required></ejs-textbox>
    </div>
    <div class="mb-3">
        <ejs-numerictextbox id="balance"
                            placeholder="Balance"
                            floatLabelType="Always"
                            min="1"
                            format="c0" required></ejs-numerictextbox>
    </div>
    <div class="mb-3">
        <ejs-textbox id="note"
                     name="Description"
                     placeholder="Description"
                     floatLabelType="Always" multiline="true">
        </ejs-textbox>
    </div>
    <div class="d-grid">
        <ejs-button id="submit" type="submit" content="Save" cssClass="e-success"></ejs-button>
    </div>
</form>